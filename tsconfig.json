{
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "allowUnreachableCode": false,
        "declaration": false,
        "experimentalDecorators": true,
        "lib": [
            "dom",
            "es2017"
        ],
        "moduleResolution": "node",
        "module": "esnext",
        "target": "es2017",
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "jsx": "react",
        "jsxFactory": "h",

        "resolveJsonModule": true,
        "baseUrl": "src",
        "paths": {
            "assets/*"  : [ "assets/*"              ],
            "auth/*"    : [ "components/auth/*"     ],
            "cause/*"   : [ "components/cause/*"    ],
            "common/*"  : [ "components/common/*"   ],
            "event/*"   : [ "components/event/*"    ],
            "fundraiser/*":["components/fundraiser/*" ],
            "location/*": [ "components/location/*" ],
            "ngo/*"     : [ "components/ngo/*"      ],
            "payment/*" : [ "components/payment/*"  ],
            "recurring-fund/*": [ "components/recurring-fund/*"      ],
            "sdg/*"     : [ "components/sdg/*"      ],
            "volunteer/*":[ "components/volunteer/*"],

            "alor/*"    :[ "templates/alor/*"],
            "huruma/*"  :[ "templates/huruma/*"],
            "bolo/*"    :[ "templates/bolo/*"],
            "proffer/*" :[ "templates/proffer/*"],
            "charity/*" :[ "templates/charity/*"]
        }

    },
    "include": [
        "src"
    ],
    "exclude": [
        "node_modules"
    ]
}
